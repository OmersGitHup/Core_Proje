@using EntityLayer.Concrete
@model List<Service>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">

	<h3 class="mb-0"></h3>

</div>
<!-- Light table -->
<div class="table-responsive">
	<table class="table align-items-center table-flush">
		<thead class="thead">
			<tr>
				<th scope="col">#</th>
				<th scope="col">Title</th>
				<th scope="col">Delete</th>
				<th scope="col">Update</th>

			</tr>
		</thead>
		<tbody class="list">

			@foreach (var item in Model)
			{
				<tr>
					<th>
						@item.ServiceID
					</th>
					<td>
						@item.Title
					</td>

					<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Delete</a></td>
					<td><a href="/Service/EditService/@item.ServiceID" class="btn btn-info">Update</a></td>
				</tr>
			}
		</tbody>
	</table>
	<a href="/Service/AddService" class="btn btn-primary">Add New Service</a>


</div>

