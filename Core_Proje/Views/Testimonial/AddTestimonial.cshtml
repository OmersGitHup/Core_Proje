@model EntityLayer.Concrete.Testimonial
@{
	ViewData["Title"] = "AddTestimonial";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Add New Testimonial</h4>
			@*  <p class="card-description"> @ViewBag.v2 </p> *@
			<form class="forms-sample" asp-actiom="AddTestimonial" method="post">
				<div class="form-group">
					<label>Title</label>
					<input type="text" class="form-control" id="title" asp-for="Title" placeholder="Name">
				</div>
				<div class="form-group">
					<label>Name</label>
					<input type="text" class="form-control" id="clientname" asp-for="ClientName" placeholder="ClientName">
				</div>
				<div class="form-group">
					<label>Company</label>
					<input type="text" class="form-control" id="clientname" asp-for="Company" placeholder="ClientName">
				</div>
				<div class="form-group">
					<label>ImageUrl</label>
					<input type="text" class="form-control" id="imageurl" asp-for="ImageUrl" placeholder="ImageUrl">
				</div>
				<div class="form-group">
					<label>Comment</label>
					<textarea class="form-control" name="Comment" asp-for="Comment" rows="6"></textarea>
				</div>
				<button type="submit" class="btn btn-primary mr-2">Submit</button>
				<a class="btn btn-dark" href="/Testimonial/Index/">Cancel</a>
			</form>
		</div>
	</div>
</div>


