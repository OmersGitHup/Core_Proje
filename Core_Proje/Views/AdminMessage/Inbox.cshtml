@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "Inbox";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Writer Inbox</h4>

				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Sender</th>
								<th scope="col">Mail</th>
								<th scope="col">Subject</th>
								<th scope="col">Date</th>
								<th scope="col">Content</th>
								<th scope="col">Delete</th>
								<th scope="col">Edit</th>

							</tr>
						</thead>
						<tbody class="list">

							@foreach (var item in Model)
							{
								<tr>
									<th>
										@item.WriterMessageID
									</th>
									<td>
										@item.SenderName
									</td>
									<td>
										@item.Sender
									</td>
									<td>
										@item.Subject
									</td>
									<td>
										@item.Date
									</td>
									<td>
										@item.MessageContent
									</td>

									<td><a href="/AdminMessage/Delete/@item.WriterMessageID" class="btn btn-outline-danger">Delete</a></td>
									<td><a href="/AdminMessage/AdminMessageDetails/@item.WriterMessageID" class="btn btn-outline-info">Open</a></td>
								</tr>
							}
						</tbody>
					</table>
					<button class="btn btn-outline-success">Create New Message</button>
				</div>
			</div>
		</div>
	</div>
</div>
