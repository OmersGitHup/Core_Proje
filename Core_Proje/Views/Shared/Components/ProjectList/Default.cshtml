@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row ">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Portfolio List</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th>#</th>
								<th> Project</th>
								<th> URL </th>
								<th> Cost </th>
								<th> Completed Percentage </th>
								<th> Status </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										@item.PortfolioID
									</td>
									<td>
										<img src="@item.ImageURL" alt="image" />
										<span class="pl-2">@item.Name</span>
									</td>
									<td> @item.ProjectUrl</td>
									<td> @item.Price </td>
									<td> @item.Value% </td>
									<td>
										<div class="badge badge-outline-success">Approved</div>
									</td>
								</tr>
							}


						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>