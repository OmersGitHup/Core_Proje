@model EntityLayer.Concrete.Feature
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
	@Html.HiddenFor(x => x.FeatureID)
	<h6 class="heading-small text-muted mb-4">User information</h6>
	<div class="pl-lg-4">
		<div class="row">

			<div class="col-lg-12">
				<div class="form-group">
					<label class="form-control-label" for="input-value">Header</label>
					@Html.TextBoxFor(x => x.Header, new { @class = "form-control", @placeholder = "Header" })
				</div>
			</div>
			<div class="col-lg-12">
				<div class="form-group">
					<label class="form-control-label" for="input-value">Name</label>
					@Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
				</div>
			</div>


			<div class="col-lg-12">
				<div class="form-group">
					<label class="form-control-label" for="input-title">Title</label>
					@Html.TextBoxFor(x => x.Title, new { @class = "form-control", @placeholder = "TiTitletle" })
				</div>
			</div>
			<div class="col-lg-12">
				<button type="submit" class="btn btn-primary">Update It!</button>
			</div>
		</div>

	</div>
}

