@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.v1</h4>
                <p class="card-description"> @ViewBag.v2 </p>
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.SkillID)

                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="Title" placeholder="Title">
                    </div>
                    <div class="form-group">
                        <label>Value</label>
                        <input type="number" class="form-control" asp-for="Value" placeholder="Value">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" href="/Skill/Index/">Cancel</a>
                </form>

            </div>
        </div>
    </div>
}
