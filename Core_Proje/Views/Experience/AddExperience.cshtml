@model EntityLayer.Concrete.Experience
@{
	ViewData["Title"] = "AddExperience";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@ViewBag.v1</h4>
                <p class="card-description"> @ViewBag.v2 </p>
                <form class="forms-sample" method="post">
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="text" class="form-control" id="datepicker" asp-for="Date" placeholder="dd/mm/yyyy">
                    </div>
                    <div class="form-group">
                        <label>Image URL</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="Description" asp-for="Description" rows="6"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" href="/Experience/Index/">Cancel</a>
                </form>
            </div>
        </div>
    </div>
}

