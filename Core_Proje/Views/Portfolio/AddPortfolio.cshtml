@model EntityLayer.Concrete.Portfolio
@{
    ViewData["Title"] = "AddExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-xl-8 order-xl-1">
    <div class="card">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col-8">
                    <h3 class="mb-0">Add Portfolio</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("AddPortfolio", "Portfolio", FormMethod.Post))
            {
                <h6 class="heading-small text-muted mb-4">User information</h6>
                <div class="pl-lg-4">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-title">Name</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                                @Html.ValidationMessageFor(x=>x.Name)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Images1</label>
                                @Html.TextBoxFor(x => x.Images1, new { @class = "form-control", @placeholder = "Images1" })
                               
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Images2</label>
                                @Html.TextBoxFor(x => x.Images2, new { @class = "form-control", @placeholder = "Images2" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Images3</label>
                                @Html.TextBoxFor(x => x.Images3, new { @class = "form-control", @placeholder = "Images3" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Images4</label>
                                @Html.TextBoxFor(x => x.Images4, new { @class = "form-control", @placeholder = "Images4" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Value</label>
                                @Html.TextBoxFor(x => x.Value, new { @class = "form-control", @placeholder = "Value" })
                                @Html.ValidationMessageFor(x => x.Value)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">ImageURL</label>
                                @Html.TextBoxFor(x => x.ImageURL, new { @class = "form-control", @placeholder = "ImageURL" })
                                @Html.ValidationMessageFor(x => x.ImageURL)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">ImageUrlBigger</label>
                                @Html.TextBoxFor(x => x.ImageUrlBigger, new { @class = "form-control", @placeholder = "ImageUrlBigger" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Platform</label>
                                @Html.TextBoxFor(x => x.Platform, new { @class = "form-control", @placeholder = "Platform" })
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">Price</label>
                                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", @placeholder = "Price" })
                                @Html.ValidationMessageFor(x => x.Price)
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group">
                                <label class="form-control-label" for="input-value">ProjectUrl</label>
                                @Html.TextBoxFor(x => x.ProjectUrl, new { @class = "form-control", @placeholder = "ProjectUrl" })
                            </div>
                        </div>
                        
                    </div>
                    <button type="submit" class="btn btn-primary">Save It!</button>
                </div>
            }
        </div>
    </div>
</div>
