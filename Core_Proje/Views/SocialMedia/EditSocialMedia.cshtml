@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit SocialMedia</h4>
                @*   <p class="card-description"> @ViewBag.v2 </p> *@
                <form class="forms-sample">
                    @Html.HiddenFor(x => x.SocialMediaID)

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        <input type="text" class="form-control" id="exampleInputName1" asp-for="Icon" placeholder="Icon">
                    </div>
                    <div class="form-group">
                        <label>URL</label>
                        <input type="text" class="form-control" asp-for="Url" placeholder="URL">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Submit</button>
                    <a class="btn btn-dark" href="/SocialMedia/Index/">Cancel</a>
                </form>

            </div>
        </div>
    </div>
}
