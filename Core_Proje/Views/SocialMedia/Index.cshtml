@using EntityLayer.Concrete
@model List<SocialMedia>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
	<div class="col-lg-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Experiences</h4>
				<p class="card-description">
					You can see your experiences here ! If would you like to add new experience , press new button !
				</p>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">#</th>
								<th scope="col">Name</th>
								<th scope="col">URL</th>
								<th scope="col">Icon</th>
								<th scope="col">Edit</th>
								<th scope="col">Delete</th>

							</tr>
						</thead>
						<tbody class="list">

							@foreach (var item in Model)
							{
								<tr>
									<th>
										@item.SocialMediaID
									</th>
									<td>
										@item.Name
									</td>

									<td>
										@item.Date.Year.ToString()
									</td>
									<td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger">Delete</a></td>
									<td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-info">Update</a></td>
								</tr>
							}
						</tbody>
					</table>
					<a class="btn btn-outline-success" href="/Experience/AddExperience/">New Experience</a>
				</div>
			</div>
		</div>
	</div>
</div>
