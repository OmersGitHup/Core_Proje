@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Sent Box</h4>
			<p class="card-description">
				Add class <code>.table</code>
			</p>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>Subject</th>
							<th>Sender</th>
							<th>Date</th>
							<th>Detail</th>

						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{

							<tr>

								<td>@item.Subject</td>
								<td>@item.ReceiverName</td>
								<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>

								<td><a href="/Writer/Message/MessageDetails/@item.WriterMessageID/" class="btn btn-outline-primary">Get</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

