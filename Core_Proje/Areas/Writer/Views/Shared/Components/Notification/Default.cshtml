@using EntityLayer.Concrete
@model List<Announcement>
@{
    string color = "";

}
<div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
    <p class="mb-0 font-weight-normal float-left dropdown-header">Notifications</p>
    @foreach(var item in Model)
    {
        if (item.Status == "Released" || item.Status == "Important")
        {
            color = "preview-icon bg-success";
        }
        if (item.Status == "Completed")
        {
            color = "preview-icon bg-success";
        }
        if (item.Status == "Pending")
        {
            color = "preview-icon bg-success";
        }
        if (item.Status == "Scheduled")
        {
            color = "preview-icon bg-success";
        }
        if (item.Status == "Upcoming")
        {
            color = "preview-icon bg-success";
        }
        <a class="dropdown-item preview-item" href="/Writer/Default/Details/@item.AnnouncementID">
            <div class="preview-thumbnail">
                <div class="@color">
                    <i class="ti-info-alt mx-0"></i>
                </div>
            </div>
            <div class="preview-item-content">
                <h6 class="preview-subject font-weight-normal">@item.Title</h6>
                <p class="font-weight-light small-text mb-0 text-muted">
                    @item.Status
                </p>
            </div>
        </a>
    }

    
 
</div>